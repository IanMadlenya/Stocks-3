<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.ryanharrison.stocks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <!-- The app needs access to the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Allow access to the current network connections -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.co.ryanharrison.stocks.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="uk.co.ryanharrison.stocks.SearchActivity" >
        </activity>
        <activity android:name="uk.co.ryanharrison.stocks.QuoteActivity" >
        </activity>
        <activity android:name="uk.co.ryanharrison.stocks.ChartActivity" >
        </activity>
        <activity
            android:name="uk.co.ryanharrison.stocks.AboutActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>